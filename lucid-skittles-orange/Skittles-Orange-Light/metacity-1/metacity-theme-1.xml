		<button function="close" state="pressed" draw_ops="close_inactive_pressed"/>
		<button function="minimize" state="pressed" draw_ops="minimize_inactive_pressed"/>
		<button function="maximize" state="pressed" draw_ops="maximize_inactive_pressed"/>
		<button function="menu" state="pressed" draw_ops="menu_inactive_pressed"/>

		<button function="close" state="prelight" draw_ops="close_inactive_prelight"/>
		<button function="minimize" state="prelight" draw_ops="minimize_inactive_prelight"/>
		<button function="maximize" state="prelight" draw_ops="maximize_inactive_prelight"/>
		<button function="menu" state="prelight" draw_ops="menu_inactive_prelight"/>
	</frame_style>

	<!-- Frame style: maximized -->
	<frame_style name="maximized" geometry="normal">
                <piece position="entire_background" draw_ops="window"/>
    		<piece position="title" draw_ops="title_normal"/>

		<button function="close" state="normal" draw_ops="close_active_normal"/>
		<button function="minimize" state="normal" draw_ops="minimize_active_normal"/>
		<button function="maximize" state="normal" draw_ops="restore_active_normal"/>
		<button function="menu" state="normal" draw_ops="menu_active_normal"/>

		<button function="close" state="pressed" draw_ops="close_active_pressed"/>
		<button function="minimize" state="pressed" draw_ops="minimize_active_pressed"/>
		<button function="maximize" state="pressed" draw_ops="restore_active_pressed"/>
		<button function="menu" state="pressed" draw_ops="menu_active_pressed"/>

		<button function="close" state="prelight" draw_ops="close_active_prelight"/>
		<button function="minimize" state="prelight" draw_ops="minimize_active_prelight"/>
		<button function="maximize" state="prelight" draw_ops="restore_active_prelight"/>
		<button function="menu" state="prelight" draw_ops="menu_active_prelight"/>
	</frame_style>

	<!-- Frame style: maximized inactive -->
	<frame_style name="maximized_inactive" geometry="normal">
                <piece position="entire_background" draw_ops="window_inactive"/>
    		<piece position="title" draw_ops="title_inactive"/>

		<button function="close" state="normal" draw_ops="close_inactive_normal"/>
		<button function="minimize" state="normal" draw_ops="minimize_inactive_normal"/>
		<button function="maximize" state="normal" draw_ops="restore_inactive_normal"/>
		<button function="menu" state="normal" draw_ops="menu_inactive_normal"/>

		<button function="close" state="pressed" draw_ops="close_inactive_pressed"/>
		<button function="minimize" state="pressed" draw_ops="minimize_inactive_pressed"/>
		<button function="maximize" state="pressed" draw_ops="restore_inactive_pressed"/>
		<button function="menu" state="pressed" draw_ops="menu_inactive_pressed"/>

		<button function="close" state="prelight" draw_ops="close_inactive_prelight"/>
		<button function="minimize" state="prelight" draw_ops="minimize_inactive_prelight"/>
		<button function="maximize" state="prelight" draw_ops="restore_inactive_prelight"/>
		<button function="menu" state="prelight" draw_ops="menu_inactive_prelight"/>
	</frame_style>

	<!-- Frame style set: normal -->
	<frame_style_set name="normal">
		<frame focus="no" state="normal" resize="both" style="inactive"/>
		<frame focus="no" state="maximized" style="maximized_inactive"/>
		<frame focus="no" state="shaded" style="inactive"/>
		<frame focus="no" state="maximized_and_shaded" style="maximized_inactive"/>

		<frame focus="yes" state="normal" resize="both" style="normal"/>
		<frame focus="yes" state="maximized" style="maximized"/>
		<frame focus="yes" state="shaded" style="normal"/>
		<frame focus="yes" state="maximized_and_shaded" style="maximized"/>
	</frame_style_set>



	<!-- the end -->
	<window type="normal" style_set="normal"/>
	<window type="dialog" style_set="normal"/>
	<window type="modal_dialog" style_set="normal"/>
	<window type="menu" style_set="normal"/>
	<window type="utility" style_set="normal"/>
	<window type="border" style_set="normal"/>

</metacity_theme>
