          <rectangle color="blend/#282b2b/#353535000/0.4" filled="true" x="Buttontbr" y="Buttonlbr" width="BS" height="3*BS"/>
          <rectangle color="blend/#282b2b/#353535000/0.4" filled="true" x="Buttontbr+2*BS" y="Buttonlbr" width="BS" height="3*BS"/>
          <rectangle color="blend/#282b2b/#353535000/0.4" filled="true" x="Buttontbr+BS" y="Buttonlbr" width="BS" height="BS"/>
          <rectangle color="blend/#282b2b/#353535000/0.4" filled="true" x="Buttontbr+BS" y="Buttonlbr+2*BS" width="BS" height="BS"/>
	</draw_ops>

